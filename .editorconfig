# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

# Tab indentation for source code
[*.{c,h,cpp,hpp}]
indent_style = tab
indent_size = tab
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2
